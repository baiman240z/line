<footer class="page-footer light-green">
    <div class="footer-copyright">
        <div class="container center">
            LINE Messaging API Tools.
        </div>
    </div>
</footer>

<textarea id="copy-boad" name="copy-boad" style="display:none"></textarea>

<form id="setting-form" action="">
    <div id="setting-modal" class="modal">
        <div class="modal-content">
            <h4>Setting</h4>
                <div class="row">
                    <div class="input-field col s12 l6">
                        <select name="channel" id="channel-selector">
                            {% for key, channel in channels %}
                                <option value="{{ key }}" {% if key == session.channel %}selected{% endif %}>{{ channel.name }}</option>
                            {% endfor %}
                        </select>
                        <label>Channel</label>
                    </div>
                </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-light btn grey">
                <i class="material-icons">close</i>
                close
            </a>
            <button class="waves-effect waves-light btn blue" type="submit">
                <i class="material-icons left">edit</i>Save
            </button>
        </div>
    </div>
</form>

<section class="hide">
    {% if flash_messages %}
        {% for message in flash_messages %}
    <div class="flash-message">{{ message }}</div>
        {% endfor %}
    {% endif %}
</section>
