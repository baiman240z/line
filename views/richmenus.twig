{% extends 'layouts/base.twig' %}

{% block title %}Top{% endblock %}

{% block container %}
    <h1>Rich Menu</h1>

    {% if error %}
        {% include 'messages/error.twig' with {message: error} %}
    {%  endif %}

    <div class="section">
        <ul class="collection">
            {% for menu in menus %}
            <li class="collection-item" menu-id="{{ menu.richMenuId }}">
                <div class="clearfix">
                    <span>{{ menu.name }}</span>
                    {% if menu.richMenuId == defaultMenuId %}
                        <div class="chip pink lighten-1 white-text">Default</div>
                    {% endif %}
                    <button type="button" class="waves-effect waves-light green btn right detail-btn ml-2"><i class="material-icons">remove_red_eye</i></button>
                    <button type="button" class="waves-effect waves-light blue btn right default-btn ml-2"><i class="material-icons">done</i></button>
{#                    <a class="waves-effect waves-light blue btn right ml-2"#}
{#                       target="_blank" href="richmenuimg?id={{ menu.richMenuId }}">#}
{#                        <i class="material-icons">image</i></a>#}
                    <button type="button" class="waves-effect waves-light red btn right delete-btn"><i class="material-icons">delete</i></button>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>

    <form id="delete-form" method="post" action="delete">
        <input type="hidden" name="id" value="">
    </form>

    <form id="default-form" method="post" action="default">
        <input type="hidden" name="id" value="">
    </form>

    <div class="fixed-action-btn">
        <a class="btn-floating btn-large orange tooltipped" href="menu" data-tooltip="追加" data-position="top">
            <i class="material-icons">add</i>
        </a>
    </div>

    <div id="detail-modal" class="modal modal-fixed-footer">
        <div class="modal-content">
            <div class="center">
                <img src="" alt="menu image">
            </div>
            <pre class="menu z-depth-3"></pre>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/richmenus.js"></script>
{% endblock %}
